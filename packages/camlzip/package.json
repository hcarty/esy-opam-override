{
  "dependencies": {
    "@esy-packages/esy-zlib": "esy-packages/esy-zlib#cd046fb"
  },
  "build": [
    "make all ZLIB_LIBDIR=#{@esy-packages/esy-zlib.install}/lib ZLIB_INCLUDE=#{@esy-packages/esy-zlib.install}/include",
    "make allopt ZLIB_LIBDIR=#{@esy-packages/esy-zlib.install}/lib ZLIB_INCLUDE=#{@esy-packages/esy-zlib.install}/include"
  ],
  "install": [
    "make install-findlib"
  ],
  "exportedEnv": {
    "CAML_LD_LIBRARY_PATH": {
      "val": "#{self.lib / 'zip' : $CAML_LD_LIBRARY_PATH}",
      "scope": "global"
    }
  }
}